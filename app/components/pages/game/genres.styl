@require '../../common.styl'

#game-info .genres
	float right
	padding 7px 15px 0 0
	height 43px
	margin-right 41px
	border-right 3px solid c-light
	small
		color c-medium2
		font-size 14px
		margin-right 10px
	a&:not(:first-child):before
		content '+'
		display inline-block
		margin-right 6px
		color c-medium2

	@media (max-width: 870px)
		margin-right 0
		border-right 0
	@media (max-width: 720px)
		float none
		padding-left 20px
