@require '../../common.styl'

#game-info .basic-info
	float right
	size 323px 43px
	border-left 3px solid c-light
	padding 8px 0 0 20px
	.company
		&:not(:first-child):before
			content '+ '
			display inline-block
			margin 0 5px 0 3px
			color c-medium2
	.year
		color c-medium

	@media (max-width: 720px)
		float none
		width auto
		height auto
		min-height 43px
		border 0
		border-bottom 3px solid c-light