@require '../../common.styl'

#game-info
	margin-right 170px
	border-right 3px solid c-light
	clearfix()
	.main-box
		width calc(100% - 323px)
		padding 0 0 0 105px
		height 243px
		max-height 243px
		background c-dark
		border-bottom 3px solid c-light
		display flex
		flex-direction column
		.score
			position absolute
	.outer-box
		height 46px
		border 3px solid c-light
		border-top none
		border-right none
		margin-left 159px
		position relative
	.info-link
		text-decoration underline
		text-decoration-color c-medium2
		text-decoration-skip ink
		-webkit-text-decoration-skip skip
		position relative
		display inline-block
		margin-right 13px
		trans .3s
		&:after
			content 'i'
			font-weight bold
			font-family Georgia, Times, serif
			font-size 9px
			size 10px 10px
			background c-medium2
			color bgcolor
			border-radius 100%
			display block
			position absolute
			text-align center
			right -12px
			top 8px
		&:hover
			text-shadow 0 0 3px c-light
	.special-status
		color c-dark2
		position absolute
		display block
		right 0
		top 198px
		width 145px
		padding-right 20px
		text-align left
		font-size 18px
		line-height 18px

	@media (max-width: 1024px)
		margin-right 70px

	@media (max-width: 870px)
		.main-box
			padding-left 22px
		.outer-box
			margin-left 76px

	@media (max-width: 720px)
		.main-box
			clear right
			width 100%
			border-top 3px solid c-light
		.outer-box
			height auto
	
	@media (max-width: 500px)
		margin-right 0
		border-right 0