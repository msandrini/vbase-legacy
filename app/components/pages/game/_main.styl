@require '../../common.styl'

#game-info
	margin-right 170px
	border-right 3px solid c-light
	clearfix()
	.main-box
		width calc(100% - 323px)
		padding 0 0 0 105px
		height 243px
		max-height 243px
		background c-dark
		border-bottom 3px solid c-light
		display flex
		flex-direction column
		.score
			position absolute
	.outer-box
		height 46px
		border 3px solid c-light
		border-top none
		border-right none
		margin-left 159px
		position relative
	.info-link
		text-decoration underline
		text-decoration-color c-medium2
		text-decoration-skip ink
		-webkit-text-decoration-skip skip
		position relative
		display inline-block
		margin-right 13px
		&:after
			content 'i'
			font-weight bold
			font-family Georgia, Times, serif
			font-size 9px
			size 10px 10px
			background c-medium2
			color bgcolor
			border-radius 100%
			display block
			position absolute
			text-align center
			right -12px
			top 8px