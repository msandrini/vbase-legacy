@require '../../common.styl'

#game-info .user-reviews
	margin 0 0 0 150px
	height 53px
	padding 9px 60px 0 0
	text-align right
	text-transform lowercase
	position relative
	cursor pointer
	flex-shrink 0
	& > a
		line-height 16px
		display inline-block
	.action-text
		color c-medium
		margin-left 10px
		trans .3s
		&:after
			content ' '
			display block
			height 22px
			width 3px
			background c-light
			position absolute
			right 41px
			top 32px
	.ball
		size 21px 21px
		position absolute
		right 32px
		top 12px
		svg
			position absolute
			pos 5px 4px
	.ball.plus svg
		top 5px
	&:hover
		.action-text
			color c-light
	.mobile-text
		display none
		&:after
			content ' '
			display block
			height 22px
			width 3px
			background c-light
			position absolute
			right 41px
			top 32px

	@media (max-width: 870px)
		.action-text, .first-text
			display none
		.mobile-text
			display block