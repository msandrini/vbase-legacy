@require '../../common.styl'

#game-info .series
	float right
	width 323px
	padding 12px 20px 20px
	list-style none
	text-align right
	margin 0
	h6
		font-weight 100
		color c-light
		font-size 16px
		margin 0 0 4px
		strong
			display inline-block
			margin-left 5px
		small
			text-transform lowercase
			font-size 11px
			display block
			text-align right
			color c-medium
			line-height 11px
	ul
		margin 3px 0
		padding 0
		list-style none
		li
			padding 5px 0
			position relative
			color c-medium2
			span
				font-weight bold
	.ball
		position absolute
		display block
		size 20px 20px
		right -32px
		top 8px
		svg
			position relative
			pos -4px -3px