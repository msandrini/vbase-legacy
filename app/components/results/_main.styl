@require '../common.styl'

.summary
	margin-right 170px
	color c-medium2
	font-size 14px
	padding 10px 30px
	text-align right
	border-right 3px solid c-light
	@media (max-width: 1024px)
		margin-right 70px
	@media (max-width: 500px)
		margin-right 40px
		padding 10px 20px

.results
	section
		margin-right 170px
		border-right 3px solid c-light
		padding 30px 0 50px 100px
		@media (max-width: 1024px)
			margin-right 70px
		@media (max-width: 720px)
			padding-left 40px
		@media (max-width: 500px)
			margin-right 40px

.no-results
	font-size 32px
	font-weight 100
	color c-light
	margin 0 170px
	text-align right
	border-right 3px solid c-light
	padding-bottom 50px
	p
		margin 0
		padding 80px 30px 20px 120px
	@media (max-width: 1024px)
		margin-right 70px

	.button-wrapper
		position relative
		clear right
		margin-bottom 100px
		&:after
			content ' '
			display block
			size 30px 3px
			background c-light
			position absolute
			right 0
			top 23px
		button
			size 48px 48px
			float right
			margin-right 30px
			svg
				margin-top 5px