@require '../common.styl'

.game-link
	cursor pointer
	display block
	padding 18px 0
	trans .5s
	clearfix()
	position relative
	text-align right
	figure
		size 64px 64px
		background c-dark2
		margin 0
		position absolute
		top 10px
		right -34px
		border-radius 100%
		overflow hidden
		border 3px solid c-light
		trans .3s
		img
			size 100% 100%
	h5
		color white
		font-size 32px
		line-height 24px
		display inline-block
		margin-left 15px
		margin 0
		font-weight 700
		trans .3s
	.aka
		display inline-block
		margin-right 15px
		font-weight 200
		color c-medium
	.supplementary-info
		font-size 14px
		color c-medium
		strong
			color c-light
			font-weight normal
		.special-status
			color c-dark
			margin-right 10px
	.content
		min-height 56px
		margin-right 40px
	&:hover
		h5
			text-shadow 0 0 5px rgba(white, .5)
		figure
			transform scale(1.1, 1.1)