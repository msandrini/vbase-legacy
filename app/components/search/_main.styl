@require '../common.styl'

.search
	width calc(100% - 580px)
	position absolute
	pos 375px 67px
	z-index 5

.basic-search
	position relative
	input
		width 70%
		font-size 24px
		padding 8px 40px 8px 0
		border 0
		color white
		background transparent
		appearance none
		border-bottom 3px solid c-light
		&:focus
			outline none
			border-bottom-color #FFF
			& + button
				background white
	button
		border 0
		position relative
		pos -20px 27px
		size 40px 40px
		padding 2px
		svg
			flip()
	.trigger-advanced
		position absolute
		font-size 12px
		display block
		color c-medium
		trans .3s
		cursor pointer
		text-transform lowercase
		svg
			margin-left 5px
			fill c-medium
			trans .3s
		&:hover
			color white
			svg
				opacity 1

.no-results
	font-size 32px
	font-weight 100
	margin 50px 100px
	c-white .75