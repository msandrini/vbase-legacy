@require '../common.styl'

.wrap-advanced
	position relative
	width 70%
	@media (max-width: 720px)
		width calc(100% - 98px)
		margin-left 20px
		z-index 5
	@media (max-width: 400px)
		width calc(100% - 64px)
	@media (max-width: 350px)
		margin-left -1px
		width calc(100% - 44px)

.hide-advanced
	width 40px
	height 40px
	padding 4px
	display block
	position absolute
	top -23px
	right -20px
	z-index 3
	svg
		position relative
		pos 4px 4px

.advanced-search
	trans .5s
	height 250px
	background rgba(c-dark, 95%)
	box-shadow 4px 4px 20px rgba(black, .2)
	border 3px solid c-light
	border-top none
	overflow hidden
	position relative
	padding 12px 18px
	.hidden &
		height 0 
		padding 0 18px
		border-bottom 0
		pointer-events none
	.group
		height 36px
	label
		width 110px
		float left
		color c-medium2
		padding 3px 10px 3px 0
		font-size 13px
		text-transform uppercase
		text-align right
	input, select
		width calc(100% - 120px)
		font-size 14px
		border-radius 0
		appearance none
		background transparent
		color white
		padding 2px 0
		border 0
		border-bottom 2px solid c-medium
		trans .3s
		&:focus, &:hover
			outline none
			border-bottom-color white
			& + .icon svg
				fill white
	select
		padding-right 15px
		width 100%
		option
			color black
	.select-box
		width calc(50% - 68px)
		float left
		margin-right 8px
		position relative
		svg
			fill c-medium
			position absolute
			right 1px
			top 10px
			trans .3s
		span
			color c-dark2
			font-size 14px
			padding-top 2px
			position absolute
		select 
			padding-left 40px
		&:last-child
			width calc(50% - 60px)
	.reset
		float left
		margin-top 12px

	@media (max-width: 870px)
		height 320px
		.select-group
			height 60px
		.select-box
			width calc(100% - 120px)
			&:last-child
				width calc(100% - 120px)
				margin-left 110px
	@media (max-width: 400px)
		label
			width 90px
			font-size 11px
			padding-left 0
		input
			width calc(100% - 100px)
		.select-box
			width calc(100% - 100px)
			&:last-child
				width calc(100% - 100px)
				margin-left 90px
	@media (max-width: 350px)
		label
			width 90px
			font-size 11px
			padding-left 0
		input
			width calc(100% - 100px)
		.select-box
			width calc(100% - 100px)
			&:last-child
				width calc(100% - 100px)
				margin-left 90px

.submit-advanced
	size 50px 50px
	margin-top 10px
	position absolute
	bottom -22px
	right -22px
	.hidden &
		display none