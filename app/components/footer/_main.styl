@require '../common.styl'

footer
	border-top 3px solid c-light
	padding 30px 170px 30px 0
	position relative
	text-align right
	.terms
		display inline-block
		padding-left 20px
		font-size 12px
		color c-medium
		margin-right 40px
		trans .3s
		&:hover
			color c-light
	.copy
		font-size 12px
		color c-dark
		&:after
			content ' '
			display block
			size 3px 30px
			background c-light
			position absolute
			right 170px
			top 0
	.contact
		size 33px 33px
		display block
		position absolute
		right 155px
		top 27px
		svg
			position relative
			pos -7px 7px

	@media (max-width: 1024px)
		padding-right 70px
		.copy:after
			right 70px
		.contact
			right 55px

	@media (max-width: 500px)
		.copy:after
			right 40px
		.contact
			right 25px
		.terms
			margin-right 0
			text-align right