@require '../common.styl'

#top-links
	.home
		size 32px 32px
		display block
		position absolute
		pos 38px 185px
		overflow visible
		z-index 6
		svg
			position relative
			pos 5px 4px
	.line
		height 70px
		width 3px
		background-color c-light
		display block
		position absolute
		pos 53px 120px
		z-index 1
	.flag
		display block
		size 20px 20px
		border 3px solid c-light
		position absolute
		top 20px
		right 52px
		z-index 2
		svg
			opacity .4
		&:hover
			opacity 1

		@media (max-width: 1024px)
			right 61px
		@media (max-width: 500px)
			right 31px
		@media (max-width: 400px)
			right 10px
			top 14px