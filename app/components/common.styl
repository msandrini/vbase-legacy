transp-white(n)
	rgba(255,255,255,n)

transp-black(n)
	rgba(0,0,0,n)
	
bg-white(n)
	background-color transp-white(n)
	
bg-black(n)
	background-color transp-black(n)
	
c-white(n)
	color transp-white(n)
	
c-black(n)
	color transp-black(n)
	
f-white(n)
	fill transp-white(n)
	
f-black(n)
	fill transp-black(n)

size(w, h)
	width w
	height h

pos(x, y)
	left x
	top y

trans(duration)
	-webkit-transition all duration ease-out
	transition all duration ease-out
	
clearfix()
	&:after
		content ""
		display table
		clear both
		
flip()
	-webkit-transform scaleX(-1)
	transform scaleX(-1)
	
appearance(v)
	-moz-appearance v
	-webkit-appearance v
	appearance v

bgcolor = #788
c-light = lighten(bgcolor, 75%)
c-medium = lighten(bgcolor, 50%)
c-medium2 = lighten(bgcolor, 25%)
c-dark = darken(bgcolor, 25%)
c-dark2 = darken(bgcolor, 50%)
c-dark3 = darken(bgcolor, 75%)