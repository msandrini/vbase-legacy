.pagination
	float right
	margin:5px 20px 0 0
	a
		float left
		width 20px
		height 25px
		margin-left 10px
		background rgba(0,0,0,.2)
		span
			display none
	.sequence
		width 30px
		// ICONS *
	select
		// ICON arrow
		float left
		-webkit-appearance none
		-moz-appearance none
		border 0
		margin-left 10px
		padding 3px 15px 3px 5px
		border-radius 0
		border-bottom 2px solid rgba(255,255,255,.5)
		color white
		background transparent
		&:focus
			border-bottom-color white
			outline none