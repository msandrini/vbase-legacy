@require 'common.styl'

.summary
	margin 8px 0 0 100px
	c-white .25
	font-size 14px

.results
	clearfix()
	section
		margin 50px 0 40px 100px

.game-link
	display block
	clear both
	padding 10px 0
	trans .5s
	clearfix()
	figure
		width 64px
		height 56px
		background gray
		float left
		margin 0 15px 0 0
		border-radius 15px
		overflow hidden
		img
			width 100%
			height 100%
	h5
		font-size 24px
		line-height 24px
		display inline-block
		margin-right 15px
		margin 0
		font-weight 700
	.aka
		display inline-block
		margin-left 10px
		font-weight 200
	.supplementary-info
		font-size 14px
		c-white .3
	.content
		min-height 56px
		width 90%
		margin-left 30px
	&:hover 
		bg-black .1
		background linear-gradient(to right, transp-black(0) 0, transp-black(.1) 50px)
		.content
			text-shadow none
		
.scorebar
	font-size 10px
	padding 2px
	letter-spacing 1px
	text-transform uppercase
	width 20%
	min-width 100px
	text-align center
	bg-white .1
	display inline-block
	margin-right 10px